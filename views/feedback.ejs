<% include partials/header.ejs %>
<% include partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3"><i class="fas fa-comment-dots"></i> Feedback</h1>
    </div>
  </div>

  <form action="/feedback" method="post">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="minecraftusernameselector">What is your Username?</label>
          <input type="text" class="form-control" name="minecraftusernameselector" placeholder="Steve" required>
          <small class="form-text text-muted">You do not need to put your username, in case we need to follow up and ask for more information, this would be useful.</small>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="feedbacktypeselector">What type of feedback would you like to provide?</label>
          <select class="form-control" name="feedbacktypeselector" required>
            <option selected disabled>Select</option>
            <option name="Suggestion">Suggestion</option>
            <option name="Idea">Idea</option>
            <option name="Complaint">Complaint</option>
            <option name="Other">Other</option>
          </select>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="detailfeedbackselector">Please provide detail on your feedback.</label>
      <textarea type="text" id="message" name="detailfeedbackselector" rows="6" class="form-control md-textarea"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <br>
</div>

