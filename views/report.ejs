<% include partials/header.ejs %>
<% include partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3">Report a Player</h1>
      <p class="lead">Is someone breaking the Rules? Report them..</p>
    </div>
  </div>

  <form action="/report" method="post">
    <div class="form-group">
      <label for="reporter">What is your Minecraft Username?</label>
      <input type="text" class="form-control" name="reporter" placeholder="Steve" required>
    </div>
    <div class="form-group">
      <label for="reporteduser">What is the Minecraft username of the player you would like to report?</label>
      <input type="text" class="form-control" name="reporteduser" placeholder="Alex" required>
    </div>
    <div class="form-group">
      <label for="platform">Platform</label>
      <select class="form-control" name="platform">
        <option value="" disabled selected>Select</option>
        <option value="In Game">In Game</option>
        <option value="Discord">Discord</option>
      </select>
    </div>
    <div class="form-group">
      <label for="evidence">Please provide your reasoning for this report with evidence.</label>
      <textarea class="form-control" name="evidence" rows="3" placeholder="Please enter you report with EVIDENCE." required></textarea>
      <small class="form-text text-muted">Reports MUST contain evidence, either a FULL screenshot of the game or upload a video to YouTube unlisted.</small>
    </div>
    <div class="form-group">
      <label for="discordtag">What is your Discord Tag?</label>
      <input type="text" class="form-control" name="discordtag" placeholder="Steve#9212" required>
      <small class="form-text text-muted">We may need to contact you to gather more information and ask follow up questions.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <br>
</div>

