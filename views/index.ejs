<% include partials/header.ejs %>
<% include partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3"><%= servername %></h1>
      <p class="lead"><%= description %></p>

      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal"><i class="fas fa-angle-double-right"></i> Play</button>

      <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog colourblack" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="modalLabel">Play</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Connect to our server using the IP address below:<br><br>
              <div class="text-center" id="ip">
                <input autofocus="autofocus" onfocus="this.select()" id="ip" type="text" class="form-control disabled" readonly="" value="<%= serverip %>">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="alert alert-warning alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Notice:</strong> This site is in development stages and maybe a little buggy. Please report any issues you see to the <a href="/issues">GitHub Issue tracker</a>.
  </div>

  <div class="row text-center">
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card card-home">
        <div class="card-body">
          <h4 class="card-title">Issues & Bugs</h4>
          <p class="card-text">When you're developing software and programs, anything and everything is bound to go wrong! If you see something, say something by creating an issue on the issue tracker.</p>
        </div>
        <div class="card-footer">
          <a href="/issues" class="btn btn-primary"><i class="fab fa-github"></i> Issue Tracker</a>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card card-home">
        <div class="card-body">
          <h4 class="card-title">Players</h4>
          <p class="card-text">Get to know the players and see their stats! Compare stats and see who is better, who hasn't died the most?</p>
        </div>
        <div class="card-footer">
          <a href="/players" class="btn btn-primary"><i class="fas fa-users"></i> Players</a>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card card-home">
        <div class="card-body">
          <h4 class="card-title">Community</h4>
          <p class="card-text">Talk to and get to know the community of awesome people! Join the Discord to also stay informed about annoucements and upcoming events.</p>
        </div>
        <div class="card-footer">
          <a href="/discord" class="btn btn-primary"><i class="fab fa-discord"></i> Discord</a>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer.ejs %>
