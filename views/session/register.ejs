<%- include("../partials/header.ejs") %>
<%- include("../partials/navigation.ejs") %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3">Register</h1>
      <p class="lead">Register to join the community and to unlock website features.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
      <div class="text-center">
        <img class="floating" style="margin-top:50px;" src="../img/elytraadmins.png" alt="The 3 Admins in Elytras." height="400px" draggable="false">
      </div>
    </div>
    <div class="col-sm" style="margin-right:100px;">
      <% if (error == true) { %>
        <div class="alert alert-danger" role="alert">
          <small><%= errormsg %></small>
        </div>
      <% } %>

      <% if (success == true) { %>
        <div class="alert alert-success" role="alert">
          <small><%= successmsg %></small>
        </div>
      <% } %>

      <small class="text-muted">Already have an account? You can <a href="/login">login here</a>.</small>
      <br><br>

      <form method="post" action="/register">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" maxlength="16" required>
          <small class="form-text text-muted">Enter your Minecraft in-game name.</small>
        </div>
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" class="form-control" name="email" required>
          <small class="form-text text-muted">We will never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" minlength="8" maxlength="16" required>
          <small class="form-text text-muted">
            Password Requirements:<br>
            <ul>
              <li>More than 8 characters.</li>
              <li>Less than 16 characters.</li>
              <li>Make sure it is unique.</li>
            </ul>
          </small>
        </div>
        <div class="form-group">
          <label for="passwordconfirm">Confirm Password</label>
          <input type="password" class="form-control" name="passwordconfirm" max="16" min="8" required>
          <small class="form-text text-muted">Ensure that your password matches!</small>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" style="margin:0 auto; width: 30%">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
