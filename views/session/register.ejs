<%- include("../partials/header.ejs") %>
<%- include("../partials/navigation.ejs") %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3">Register</h1>
      <p class="lead">Please register to join our community and to unlock website features.</p>
    </div>
  </div>

  <div class="row">
    <div class="col- text-left">
      <img class="floating" style="" src="../img/elytraadmins.png" alt="The 3 Admins in Elytras." height="400px" draggable="false">
    </div>

    <div class="col-sm-">
      <% if (error == true) { %>
        <div class="alert alert-danger" role="alert">
          <small><%= errormsg %></small>
        </div>
      <% } %>

      <% if (success == true) { %>
        <div class="alert alert-success" role="alert">
          <small><%= successmsg %></small>
        </div>
      <% } %>

      <small class="text-muted">Already have an account? You can <a href="/login">login here</a>.</small>
      <br><br>

      <form method="post" action="/register">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" required>
          <small class="form-text text-muted">Enter your Minecraft IGN.</small>
        </div>
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" class="form-control" name="email" required>
          <small class="form-text text-muted">We will never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" required>
          <small class="form-text text-muted">Please ensure that your password is safe and secure, something that only you would know.</small>
        </div>
        <div class="form-group">
          <label for="passwordconfirm">Confirm Password</label>
          <input type="password" class="form-control" name="passwordconfirm" required>
          <small class="form-text text-muted">Ensure that your password matches!</small>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" style="margin:0 auto; width: 30%">Register</button>
        </div>
      </form>
    </div>
  </div>

  <br>
</div>

<%- include("../partials/footer.ejs") %>
