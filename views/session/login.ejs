<%- include("../partials/header.ejs") %>
<%- include("../partials/navigation.ejs") %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3">Login</h1>
      <p class="lead">Please login to continue.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm" style="min-height:500px;">
      <div class="text-center">
        <img class="floating" style="margin-top:10px;" src="../img/elytraadmins.png" alt="The 3 Admins in Elytras." height="400px" draggable="false">
      </div>
    </div>
    <div class="col-sm" style="margin-right:100px;">
      <% if (warningalert == true) { %>
        <%- include("../partials/micros/warningalert.ejs") %>
      <% } %>

      <form method="post" action="/login">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" required>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary" style="margin:0 auto; width: 30%">Sign In</button>
        </div>
      </form>
      <br>
      <small class="text-muted">Don't have an account? You can <a href="/register">register here</a>.</small>
    </div>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
