<% include ../partials/header.ejs %>
<% include ../partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3">Login</h1>
      <p class="lead">Please login to continue.</p>
    </div>
  </div>

  <% if (setValue) { %>
    <div class="alert alert-danger alert-dismissible">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong>Error!</strong> <%- JSON.stringify(message) %>
    </div>
  <% } %>

  <div class="container credential-container">
    <form method="post" action="/login">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" name="username" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary" style="margin:0 auto; width: 30%">Sign In</button>
      </div>
    </form>
    <br>
  </div>
</div>

<% include ../partials/footer.ejs %>
