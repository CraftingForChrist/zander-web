<% include ../partials/header.ejs %>
<% include ../partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3"><i class="fas fa-gamepad"></i> Game Application</h1>
    </div>
  </div>

  <form action="/apply/game" method="post">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="username">What is your Username?</label>
          <input type="text" class="form-control" name="username" placeholder="Steve" required>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="discordtag">What is your Discord Tag?</label>
          <input type="text" class="form-control" name="discordtag" placeholder="Steve#9212" required>
          <small class="form-text text-muted">If you haven't joined the Discord, you can join <a href="/discord">here.</a></small>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="howdidyouhearaboutus">How did you hear about us?</label>
      <input type="text" class="form-control" name="howdidyouhearaboutus">
    </div>
    <div class="form-group">
      <label for="additionalinformation">Any other information or comments?</label>
      <input type="text" class="form-control" name="additionalinformation">
    </div>

    <div class="form-group card">
      <div class="card-body markdown-style confirmpolicy">
        <h1>Terms of Service</h1>
        <zero-md src="<%= termsmd %>"></zero-md>
        <br><br>

        <h1>Privacy Policy</h1>
        <zero-md src="<%= privacymd %>"></zero-md>
        <br><br>

        <h1>Server Rules</h1>
        <zero-md src="<%= rulesmd %>"></zero-md>
      </div>
    </div>

    <div class="form-group">
      <input type="checkbox" name="q-8" id="a-0" required />
      <label for="a-0"><small class="form-text text-muted">I agree and have read the <a href="/terms">Terms of Service</a>, <a href="/privacy">Privacy Policy</a> and the <a href="/rules">Server Rules</a>.</small></label>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <br>
</div>

<% include ../partials/footer.ejs %>
