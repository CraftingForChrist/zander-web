          <%- include("../partials/micros/appsnotaccepted.ejs") %>
        <% } else { %>
          <div class="card-footer">
            <a href="/apply/juniorstaff" class="btn btn-primary">Apply Now!</a>
          </div>
        <% } %>

      </div>
    </div>

