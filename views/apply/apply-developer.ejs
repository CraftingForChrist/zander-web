<% include ../partials/header.ejs %>
<% include ../partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3"><i class="fas fa-code"></i> Developer Application</h1>
    </div>
  </div>

  <div class="modal fade" id="developersmdmodal" tabindex="-1" role="dialog" aria-labelledby="developersmdmodaltitle" aria-hidden="true">
    <div class="modal-dialog modal-lg text-left" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="developerTitle">Developer Requirements</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <zero-md src="<%= developersmd %>"></zero-md>
        </div>
      </div>
    </div>
  </div>

  <div class="alert alert-warning alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Notice:</strong> Before starting your application, ensure that you meet the Developer role requirements. Click here for the <a href="#" data-toggle="modal" data-target="#developersmdmodal">role requirements</a>.
  </div>

  <form action="/apply/developer" method="post">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="text" class="form-control" name="name" placeholder="John Smith" required>
          <small class="form-text text-muted">This could also be a nickname or your Minecraft IGN.</small>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <label for="discordtag">What is your Discord Tag?</label>
          <input type="text" class="form-control" name="discordtag" placeholder="JohnSmith#9212" required>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="email">What is your email address?</label>
      <input type="text" class="form-control" name="email" placeholder="johnsmith@domain.com.au" required>
    </div>
    <div class="form-group">
      <label for="devexperience">What experience do you have as a Developer?</label>
      <textarea class="form-control" name="devexperience" rows="4" required></textarea>
      <small class="form-text text-muted">This is where you should put where your development experience fits into our developer role requirements.</small>
    </div>
    <div class="form-group">
      <label for="devcontribute">Provide links to projects that you have contributed to.</label>
      <textarea class="form-control" name="devcontribute" rows="4"></textarea>
      <small class="form-text text-muted">Links can include things such as Open Source GitHub projects or private projects you wish to share with us.</small>
    </div>
    <div class="form-group">
      <label for="interest">Why are you interested in joining our team?</label>
      <textarea class="form-control" name="interest" rows="4"></textarea>
    </div>
    <div class="form-group">
      <label for="bestchoice">Why do you think you are the best choice for our team?</label>
      <textarea class="form-control" name="bestchoice" rows="4"></textarea>
    </div>
    <div class="form-group">
      <label for="additionalinformation">Any other information or comments?</label>
      <input type="text" class="form-control" name="additionalinformation">
    </div>

    <div class="form-group">
      <small class="form-text text-muted">By submitting your application, you agree to have your application and any material provided within it made available to Developers and Administrators.<br>We respect your privacy and will not share the application beyond these select few.</small>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <br>
</div>

<% include ../partials/footer.ejs %>
