<% include partials/header.ejs %>
<% include partials/navigation.ejs %>

<div class="container">
  <div class="jumbotron jumbotron-image-header my-4 home-jumbo-header" id="video-container">
    <div class="container text-white">
      <h1 class="display-3"><i class="fas fa-file-signature"></i> Contact</h1>
      <p class="lead">Do you have any questions? Please do not hesitate to contact us directly!</p>
    </div>
  </div>

  <section class="mb-4">
    <div class="row">
      <div class="col-md-9 mb-md-0 mb-5">
        <form action="/contact" method="post">
          <div class="row">
            <div class="col-md-6">
              <div class="md-form mb-0">
                <label for="name" class="">Username/Name</label>
                <input type="text" name="name" class="form-control" maxlength="50">
                <small class="form-text text-muted">Maximum of 50 Characters</small>
              </div>
            </div>

            <div class="col-md-6">
              <div class="md-form mb-0">
                <label for="email" class="">Email</label>
                <input type="text" name="email" class="form-control">
              </div>
            </div>
          </div>
          <br>

          <div class="row">
            <div class="col-md-12">
              <div class="md-form mb-0">
                <label for="enquirysubject" class="">Subject</label>
                <input type="text" name="enquirysubject" class="form-control" maxlength="50">
                <small class="form-text text-muted">Maximum of 50 Characters</small>
              </div>
            </div>
          </div>
          <br>

          <div class="row">
            <div class="col-md-12">
              <div class="md-form">
                <label for="message">Message</label>
                <textarea type="text" name="message" rows="4" class="form-control md-textarea" maxlength="1000"></textarea>
                <small class="form-text text-muted">Maximum of 1000 Characters</small>
              </div>
            </div>
          </div>
          <br>

          <div class="text-center text-md-left">
            <input class="btn btn-primary" type="submit" name="" value="Send">
          </div>
         </form>
      </div>

      <div class="col-md-3 text-center">
        <ul class="list-unstyled mb-0">
          <li><i class="fas fa-envelope mt-4 fa-2x"></i>
            <p><a href="mailto:<%= contactemail %>"><%= contactemail %></a></p>
          </li>
        </ul>
      </div>
    </div>
  </section>
</div>

<% include partials/footer.ejs %>
