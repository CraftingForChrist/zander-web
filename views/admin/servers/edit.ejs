<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navigation.ejs") %>

<div class="container">
  <br>
  <form action="/admin/servers/edit" method="post" style="margin: 0 auto; width: 500px; padding: 10px;">
    <input type="hidden" name="id" value="<%= objdata.id %>">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" value="<%= objdata.name %>" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" rows="8" cols="65" required><%= objdata.description %></textarea>
    </div>
    <div class="form-group">
      <label for="disclaimer">Disclaimer</label>
      <textarea name="disclaimer" rows="8" cols="65"><%= objdata.disclaimer %></textarea>
    </div>
    <div class="form-group">
      <label for="ipaddress">IP Address</label>
      <input type="text" class="form-control" name="ipaddress" value="<%= objdata.ipaddress %>" required>
    </div>
    <div class="form-group">
      <label for="position">Position</label>
      <input type="text" class="form-control" name="position" value="<%= objdata.position %>" required>
    </div>

    <button type="submit" class="btn btn-primary">Update Server</button>
  </form>
  <br>
</div>

<%- include("../../partials/footer.ejs") %>
